{
    "name":"contao-bootstrap/layout",
    "description":"Bootstrap layout integration in Contao",
    "keywords":["bootstrap", "layout", "contao"],
    "type":"contao-bundle",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Project leader"
        }
    ],
    "support":{
        "email":"mail@netzmacht.de",
        "issues":"https://github.com/contao-bootstrap/layout/issues",
        "wiki":"http://contao-bootstrap.netzmacht.de",
        "source":"https://github.com/contao-bootstrap/layout"
    },
    "require":{
        "php":">=5.6.0",
        "contao-community-alliance/composer-plugin": "~3.0",
        "contao/core-bundle": "~4.3",
        "contao-bootstrap/core": "~2.0",
        "netzmacht/html": "~1"
    },
    "require-dev": {
        "netzmacht/contao-build-tools": "~1.1",
        "contao/manager-plugin": "^2.0"
    },
    "conflict": {
        "netzmacht/contao-bootstrap": "*"
    },
    "autoload": {
        "psr-4": { "ContaoBootstrap\\Layout\\": "src/" }
    },
    "extra":{
        "contao": {
            "transifex": {
                "project": "contao-bootstrap",
                "prefix": "layout-",
                "languages_cto": "src/Resources/languages",
                "languages_tx": ".tx"
            }
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-develop": "1.1.x-dev",
            "dev-contao4": "2.0.x-dev"
        },
        "contao-manager-plugin": "ContaoBootstrap\\Layout\\ContaoManager\\Plugin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
